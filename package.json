{
  "name": "llt-assistant",
  "displayName": "LLT Assistant",
  "description": "AI-powered pytest test generator and quality analyzer. Generate comprehensive unit tests and detect quality issues in Python test code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Testing",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onView:lltContextView",
    "onView:lltQualityExplorer",
    "onView:lltCoverageExplorer",
    "onView:lltImpactExplorer",
    "onCommand:llt.reindexProject",
    "workspaceContains:**/test_*.py",
    "workspaceContains:**/coverage.xml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "llt-context",
          "title": "LLT Context",
          "icon": "resources/icons/context-icon.svg"
        },
        {
          "id": "llt-quality",
          "title": "LLT Quality",
          "icon": "resources/icons/llt-icon.svg"
        },
        {
          "id": "llt-coverage",
          "title": "LLT Coverage",
          "icon": "resources/icons/coverage-icon.svg"
        }
      ]
    },
    "views": {
      "llt-context": [
        {
          "id": "lltContextView",
          "name": "Project Context",
          "icon": "resources/icons/context-icon.svg",
          "contextualTitle": "LLT Project Context"
        }
      ],
      "llt-quality": [
        {
          "id": "lltQualityExplorer",
          "name": "Test Quality",
          "icon": "resources/icons/llt-icon.svg",
          "contextualTitle": "LLT Test Quality Analysis"
        },
        {
          "id": "lltImpactExplorer",
          "name": "Test Impact",
          "icon": "resources/icons/llt-icon.svg",
          "contextualTitle": "LLT Test Impact Analysis"
        }
      ],
      "llt-coverage": [
        {
          "id": "lltCoverageExplorer",
          "name": "Coverage Analysis",
          "icon": "resources/icons/coverage-icon.svg",
          "contextualTitle": "LLT Coverage Optimization"
        }
      ]
    },
    "commands": [
      {
        "command": "llt-assistant.generateTests",
        "title": "LLT: Generate Tests"
      },
      {
        "command": "llt-assistant.analyzeQuality",
        "title": "LLT: Analyze Test Quality",
        "icon": "$(beaker)"
      },
      {
        "command": "llt-assistant.refreshQualityView",
        "title": "LLT: Refresh Quality View",
        "icon": "$(refresh)"
      },
      {
        "command": "llt-assistant.clearQualityIssues",
        "title": "LLT: Clear Quality Issues",
        "icon": "$(clear-all)"
      },
      {
        "command": "llt-assistant.showIssue",
        "title": "LLT: Show Quality Issue"
      },
      {
        "command": "llt-assistant.analyzeCoverage",
        "title": "LLT: Analyze Coverage",
        "icon": "$(graph)"
      },
      {
        "command": "llt-assistant.refreshCoverage",
        "title": "LLT: Refresh Coverage",
        "icon": "$(refresh)"
      },
      {
        "command": "llt-assistant.clearCoverage",
        "title": "LLT: Clear Coverage",
        "icon": "$(clear-all)"
      },
      {
        "command": "llt-assistant.generateCoverageTest",
        "title": "LLT: Generate Coverage Test"
      },
      {
        "command": "llt-assistant.batchGenerateTests",
        "title": "LLT: Batch Generate Tests"
      },
      {
        "command": "llt-assistant.showCoverageImprovement",
        "title": "LLT: Show Coverage Improvement"
      },
      {
        "command": "llt-assistant.goToLine",
        "title": "LLT: Go to Line"
      },
      {
        "command": "llt-assistant.showCoverageItem",
        "title": "LLT: Show Coverage Item"
      },
      {
        "command": "llt-assistant.coverageCodeLensYes",
        "title": "LLT: Generate Test for Coverage"
      },
      {
        "command": "llt-assistant.coverageCodeLensNo",
        "title": "LLT: Cancel Coverage Test Generation"
      },
      {
        "command": "llt-assistant.analyzeImpact",
        "title": "LLT: Analyze Changes",
        "icon": "$(git-compare)"
      },
      {
        "command": "llt-assistant.refreshImpactView",
        "title": "LLT: Refresh Impact View",
        "icon": "$(refresh)"
      },
      {
        "command": "llt-assistant.clearImpactAnalysis",
        "title": "LLT: Clear Impact Analysis",
        "icon": "$(clear-all)"
      },
      {
        "command": "llt-assistant.switchImpactView",
        "title": "LLT: Switch View",
        "icon": "$(list-tree)"
      },
      {
        "command": "llt-assistant.regenerateTests",
        "title": "LLT: Regenerate Affected Tests",
        "icon": "$(sync)"
      },
      {
        "command": "llt.reindexProject",
        "title": "LLT: Re-index Project",
        "icon": "$(refresh)"
      },
      {
        "command": "llt.clearCache",
        "title": "LLT: Clear Cache",
        "icon": "$(clear-all)"
      },
      {
        "command": "llt.viewLogs",
        "title": "LLT: View Logs"
      },
      {
        "command": "llt.debug.testCache",
        "title": "LLT: Test Cache (Debug)"
      },
      {
        "command": "llt.debug.extractSymbols",
        "title": "LLT Debug: Extract Symbols from Current File"
      },
      {
        "command": "llt.debug.diagnostic",
        "title": "LLT Debug: Run Diagnostic"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "llt.reindexProject",
          "when": "view == lltContextView",
          "group": "navigation@1"
        },
        {
          "command": "llt.clearCache",
          "when": "view == lltContextView",
          "group": "navigation@2"
        },
        {
          "command": "llt-assistant.analyzeQuality",
          "when": "view == lltQualityExplorer",
          "group": "navigation@1"
        },
        {
          "command": "llt-assistant.refreshQualityView",
          "when": "view == lltQualityExplorer",
          "group": "navigation@2"
        },
        {
          "command": "llt-assistant.clearQualityIssues",
          "when": "view == lltQualityExplorer",
          "group": "navigation@3"
        },
        {
          "command": "llt-assistant.analyzeCoverage",
          "when": "view == lltCoverageExplorer",
          "group": "navigation@1"
        },
        {
          "command": "llt-assistant.refreshCoverage",
          "when": "view == lltCoverageExplorer",
          "group": "navigation@2"
        },
        {
          "command": "llt-assistant.clearCoverage",
          "when": "view == lltCoverageExplorer",
          "group": "navigation@3"
        },
        {
          "command": "llt-assistant.analyzeImpact",
          "when": "view == lltImpactExplorer",
          "group": "navigation@1"
        },
        {
          "command": "llt-assistant.refreshImpactView",
          "when": "view == lltImpactExplorer",
          "group": "navigation@2"
        },
        {
          "command": "llt-assistant.switchImpactView",
          "when": "view == lltImpactExplorer",
          "group": "navigation@3"
        },
        {
          "command": "llt-assistant.clearImpactAnalysis",
          "when": "view == lltImpactExplorer",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "llt.reindexProject",
          "when": "view == lltContextView",
          "group": "inline@1"
        },
        {
          "command": "llt.clearCache",
          "when": "view == lltContextView",
          "group": "inline@2"
        }
      ],
      "editor/context": [
        {
          "when": "editorLangId == python",
          "command": "llt-assistant.generateTests",
          "group": "1_modification"
        }
      ]
    },
    "configuration": {
      "title": "LLT Assistant",
      "properties": {
        "llt-assistant.backendUrl": {
          "type": "string",
          "default": "http://localhost:8886",
          "description": "Backend API URL for all LLT features (Test Generation, Quality Analysis, Coverage Optimization, Impact Analysis)"
        },
        "llt-assistant.quality.analysisMode": {
          "type": "string",
          "enum": [
            "rules-only",
            "llm-only",
            "hybrid"
          ],
          "enumDescriptions": [
            "Fast analysis using only rule engine",
            "AI-powered analysis using only LLM",
            "Balanced: rule engine + LLM for uncertain cases"
          ],
          "default": "hybrid",
          "description": "Test quality analysis mode"
        },
        "llt-assistant.quality.autoAnalyze": {
          "type": "boolean",
          "default": false,
          "description": "Automatically analyze tests when opening test files"
        },
        "llt-assistant.quality.enableInlineDecorations": {
          "type": "boolean",
          "default": true,
          "description": "Show inline decorations for quality issues"
        },
        "llt-assistant.quality.enableCodeActions": {
          "type": "boolean",
          "default": true,
          "description": "Show quick fix suggestions (lightbulb)"
        },
        "llt-assistant.quality.severityFilter": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "error",
              "warning",
              "info"
            ]
          },
          "default": [
            "error",
            "warning",
            "info"
          ],
          "description": "Which severity levels to display"
        },
        "llt-assistant.quality.disabledRules": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "List of quality rule IDs to disable"
        },
        "llt-assistant.quality.llmTemperature": {
          "type": "number",
          "default": 0.3,
          "minimum": 0,
          "maximum": 1,
          "description": "Temperature for LLM quality analysis (0-1)"
        },
        "llt-assistant.coverage.coverageFilePath": {
          "type": "string",
          "default": "coverage.xml",
          "description": "Path to coverage.xml file (relative to workspace root)"
        },
        "llt-assistant.coverage.minFunctionComplexity": {
          "type": "number",
          "default": 2,
          "minimum": 1,
          "description": "Minimum function complexity to consider for coverage optimization"
        },
        "llt-assistant.coverage.autoRefresh": {
          "type": "boolean",
          "default": false,
          "description": "Automatically refresh coverage data when coverage.xml changes"
        },
        "llt-assistant.coverage.prioritize": {
          "type": "string",
          "enum": [
            "complexity",
            "uncovered",
            "branch"
          ],
          "enumDescriptions": [
            "Prioritize functions by complexity",
            "Prioritize completely uncovered functions",
            "Prioritize functions with uncovered branches"
          ],
          "default": "complexity",
          "description": "Strategy for prioritizing coverage improvements"
        },
        "llt-assistant.coverage.enableInlinePreview": {
          "type": "boolean",
          "default": true,
          "description": "Show inline preview for generated tests with Accept/Edit/Reject actions"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p tsconfig.test.json --outDir out",
    "watch-tests": "tsc -p tsconfig.test.json -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "npm run test:unit && npm run test:property",
    "test:unit": "cross-env TS_NODE_PROJECT=tsconfig.test.json mocha --config .mocharc.json",
    "test:unit:watch": "cross-env TS_NODE_PROJECT=tsconfig.test.json mocha --config .mocharc.json --watch",
    "test:unit:coverage": "nyc npm run test:unit",
    "test:integration": "npm run compile-tests && npm run compile && vscode-test",
    "test:property": "cross-env TS_NODE_PROJECT=tsconfig.test.json mocha --require ts-node/register/transpile-only \"src/test/property/**/*.property.test.ts\"",
    "test:coverage": "nyc --reporter=html --reporter=text --reporter=lcov npm run test:unit",
    "test:all": "npm run test:unit && npm run test:property && npm run test:integration"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/sinon": "^21.0.0",
    "@types/uuid": "^11.0.0",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "chai": "^4.5.0",
    "cross-env": "^10.1.0",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "fast-check": "^4.3.0",
    "glob": "^12.0.0",
    "knip": "^5.70.1",
    "mocha": "^11.7.5",
    "npm-run-all": "^4.1.5",
    "nyc": "^17.1.0",
    "sinon": "^21.0.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "tree-sitter": "^0.25.0",
    "tree-sitter-python": "^0.25.0",
    "uuid": "^13.0.0"
  }
}
