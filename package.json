{
  "name": "llt-assistant",
  "displayName": "LLT-assistant",
  "description": "A tool to help developer improve their low code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "llt-assistant.generateTests",
        "title": "Generate Tests"
      },
      {
        "command": "llt-assistant.supplementTests",
        "title": "Supplement Test Scenarios"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorLangId == python",
          "command": "llt-assistant.generateTests",
          "group": "1_modification"
        },
        {
          "when": "editorLangId == python && resourceFilename =~ /test_.*\\.py$/",
          "command": "llt-assistant.supplementTests",
          "group": "1_modification"
        }
      ]
    },
    "configuration": {
      "title": "LLT Assistant",
      "properties": {
        "llt-assistant.apiMode": {
          "type": "string",
          "default": "backend",
          "enum": [
            "backend",
            "direct"
          ],
          "enumDescriptions": [
            "Use LLT Assistant Backend API (recommended, no API key needed)",
            "Direct LLM API calls (requires API key)"
          ],
          "description": "API mode: use backend or direct LLM API calls"
        },
        "llt-assistant.backendUrl": {
          "type": "string",
          "default": "https://llt-assistant.fly.dev/api/v1",
          "description": "Backend API URL (only used in backend mode)"
        },
        "llt-assistant.apiProvider": {
          "type": "string",
          "default": "openai",
          "enum": [
            "openai",
            "claude",
            "deepseek",
            "openrouter"
          ],
          "description": "LLM API provider to use (only used in direct mode)"
        },
        "llt-assistant.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for the selected provider (only used in direct mode)"
        },
        "llt-assistant.modelName": {
          "type": "string",
          "default": "gpt-4",
          "description": "Model name to use (only used in direct mode, e.g., gpt-4, claude-3-opus-20240229)"
        },
        "llt-assistant.temperature": {
          "type": "number",
          "default": 0.3,
          "minimum": 0,
          "maximum": 2,
          "description": "Temperature for LLM generation (only used in direct mode, 0-2)"
        },
        "llt-assistant.maxTokens": {
          "type": "number",
          "default": 2000,
          "description": "Maximum tokens for LLM response (only used in direct mode)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "tree-sitter": "^0.25.0",
    "tree-sitter-python": "^0.25.0"
  }
}
